{# Macros #}

{% macro topic(order = 1, img = "https://via.placeholder.com/150", title="", href="", desc="") %} 

    <a style="order: {{ order }};
    {% if order % 4 == 1 %}
        margin-left:0px
    {% endif %}
    {% if order % 4 == 0 %}
        margin-right:0px
    {% endif %}"
     href="{{ href }}" class="topic">
       
        <img src="{{ href }}icon.svg">
        <h2>{{ title }}</h2>
        <p> {{ desc }} </p>

    </a>
    
{% endmacro %}

{# Main content #}

